[core]
	autocrlf = false
	filemode = false
[log]
	date = iso
[init]
	templateDir = ~/.config/git-default-template
	defaultBranch = main
[rebase]
	udateRefs = true
[rerere]
	enabled = true
[alias]
	ci = commit
	lslog = log --all --color --graph --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lstag = log --tags --simplify-by-decoration --pretty='format:%ci %d'
	rclone = clone --recurse-submodules
	pushf = push --force-with-lease
